<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inv.sfs.com.criticapp.addInvite"
    android:orientation="vertical">


    <ScrollView android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_basic_color"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_basic_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/coupon_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="@string/thank_you"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:hint="Offer"
                android:layout_marginTop="10dp"
                android:id="@+id/discount_text_et"
                android:height="50dp"
                android:textSize="20dp"
                android:maxLines="1"
                android:inputType="text"
                android:maxLength="10"
                android:background="@color/white"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:id="@+id/comments_et"
                android:maxLength="30"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:textAlignment="center"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_white_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:id="@+id/expiryDate_tv"
                    android:text="Expires: Feb 28, 2018"
                    android:textSize="20dp"
                    android:textColor="@color/choco_color"
                    android:textAlignment="center"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="140dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_white_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/coupon_code_tv"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="000001"
                    android:textSize="18dp"
                    android:textColor="@color/choco_color"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>


